<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.Notes" parent="Base.Theme.Notes">
        <item name="android:statusBarColor">@color/black</item>
        // use this for status bar background color is black
        <item name="android:windowLightStatusBar">false</item>
        //use this for status bar text color is set white
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ffffff</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#000000</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card">
        <item name="android:background">@color/black</item>
    </style>

    <style name="parent_linear_layout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="icon_background">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="search_background">
        <item name="android:background">@drawable/bgsearch</item>
    </style>

    <style name="text_search">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bgsearch</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
    </style>

    <style name="statusBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="background_drawable">
        <item name="android:background">@drawable/item_background_night</item>
    </style>

    <style name="item2_text">
        <item name="android:textColor">#F2FFFFFF</item>
    </style>

    <style name="time_text">
        <item name="android:textColor">#CCFFFFFF</item>
    </style>
</resources>